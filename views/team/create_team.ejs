    <div>
     	<label class="arrow-form">Team Logo</label>
        <input name="uni_email" class="arrow-form">
    </div>

    <div>
     	<label class="arrow-form">Game *</label>
        <select>
        	<option selected>Dota</option>
    	</select>
    </div>
